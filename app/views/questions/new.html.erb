<h1>New Question</h1>

<div class="row">
	<div class="col-md-4">
		<p>Guidelines for Questions</p>
			<ul>
				<li>Don't be stupid</li>
			</ul>
	</div>
	<div class="col-md-8">
		<%=form_for @question do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control', placeholder: "Enter Question Title Here" %>
			</div>

			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_field :body, rows: 8, class: 'form-control', placeholder:"Enter your question Here" %>
			</div>

			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-success' %>
			</div>
			
			</div>
		<%end%>
	</div>
</div>
