<h1>Create your Advertisement here</h1>

	<div class="row">
	   <div class="col-md-4">
	     <p>Guidelines for Advertisements</p>
	     <ul>
	       
	       
	       <li>Make me lots of money.</li>
	     </ul>
	    </div>

    <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
	    	<div class="form-group">
	    		<%= f.label :title %>
	    		<%= f.text_field :title, class: 'form-control',
	    			placeholder: "Enter ad Title Here" %>
	    	</div>

	    	<div class="form-group">
	    		<%= f.label :copy %>
	    		<%= f.text_area :copy, rows: 8, class: 'form-control', placeholer: "Enter copy here" %>
	    	</div>

	    	<div class="form-group">
	    		<%=f.label :price %>
	    		<%= f.text_area :price, rows: 8, class: 'form-control', placeholder: "Enter Price Here" %>
	    	</div>

		    	<div class="form-group">

		         <%= f.submit "Save", class: 'btn btn-success' %>
		        </div>
    		<%end%>
    	</div>
    </div>